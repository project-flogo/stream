{
  "name": "flogo-filter",
  "type": "flogo:activity",
  "version": "0.2.0",
  "title": "Filter",
  "description": "Simple Filter Activity",
  "homepage": "https://github.com/project-flogo/stream/tree/master/activity/filter",
  "settings": [
    {
      "name": "type",
      "type": "string",
      "required": true,
      "allowed" : ["non-zero", "conditional"]
    },
    {
      "name": "proceedOnlyOnEmit",
      "type": "boolean"
    }
  ],
  "input":[
    {
      "name": "value",
      "type": "any"
    },
    {
      "name": "condition",
      "type": "boolean"
    }
  ],
  "output": [
    {
      "name": "filtered",
      "type": "boolean"
    },
    {
      "name": "value",
      "type": "any"
    }
  ]
}
